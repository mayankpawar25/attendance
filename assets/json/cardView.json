{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
            {
                "id": "Sender",
                "type": "TextBlock",
                "text": "Sender: ${creator[0].displayName}",
                "size": "small",
                "wrap": true
            },
            {
                "id": "Title",
                "type": "TextBlock",
                "text": "${action.displayName}",
                "size": "large",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Date",
                "type": "Container",
                "style": "emphasis",
                "items": [
                    {
                        "type": "TextBlock",
                        "text": "Till: ${action.dataTables[0].dataColumns[0].options[0].displayName}, ${action.dataTables[0].dataColumns[0].options[1].displayName}",
                        "size": "medium",
                        "wrap": true,
                        "spacing": "medium"
                    },
                    {
                        "type": "TextBlock",
                        "$when": "${action.dataTables[0].dataColumns[0].options[2].displayName == 'Yes'}",
                        "text": "With Photo and Location",
                        "size": "small",
                        "wrap": true,
                        "spacing": "medium"
                    },
                    {
                        "type": "TextBlock",
                        "$when": "${action.dataTables[0].dataColumns[0].options[2].displayName == 'No'}",
                        "text": "With Location",
                        "size": "small",
                        "wrap": true,
                        "spacing": "medium"
                    }
                ]
            },
            {
                "id": "Summary",
                "type": "TextBlock",
                "text": "Responses: ${summary.rowCount}, Responders: ${summary.rowCreatorCount}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            }
        ],
        "actions": [
            {
                "id": "RespondButton",
                "$when": "${equals(action.status, 'Active')}",
                "title": "Respond",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            },
            {
                "id": "ResultButton",
                "title": "View Result",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "DetailView"
                }
            }
        ]
    },
    "data": {
        "action": {
            "command": "GetAction"
        },
        "summary": {
            "command": "GetActionDataRowsSummary",
            "parameters": {
                "addDefaultAggregates": true
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": [
                    "$ActionCreator"
                ]
            }
        }
    }
}
